        <div class="code-example">
            <div class="code-header">
                <div class="code-title">
                    <i class="fas fa-file-code"></i> HomeController.cs - Your First Controller
                </div>
                <button class="btn btn-sm btn-outline-secondary copy-btn">
                    <i class="fas fa-copy"></i> Copy Code
                </button>
            </div>
            
            <div class="code-content">
<pre><code class="language-csharp">using Microsoft.AspNetCore.Mvc;

namespace MyWebApp.Controllers
{
    public class HomeController : Controller
    {
        // HTTP GET: Handles "/" or "/Home/Index"
        // [HttpGet] is optional here - it's the default
        public IActionResult Index()
        {
            // Pass data to the view
            ViewData["Title"] = "Welcome to My Web App";
            ViewData["Message"] = "Hello from the Home Controller!";
            
            // Return the Index.cshtml view
            return View();
        }
        
        // HTTP GET: Handles "/Home/About"
        // This will show the About page form
        [HttpGet]
        public IActionResult About()
        {
            ViewData["Title"] = "About Us";
            ViewData["Message"] = "This is the about page.";
            
            return View();
        }
        
        // HTTP POST: Handles form submissions to "/Home/About"
        // This method runs when user submits a form
        [HttpPost]
        public IActionResult About(string feedback)
        {
            // Process the form data here
            ViewData["Title"] = "Thank You!";
            ViewData["Message"] = "Thanks for your feedback!";
            
            return View("ThankYou");
        }
        
        // HTTP GET: Handles "/Home/Contact"
        [HttpGet]
        public IActionResult Contact()
        {
            ViewData["Title"] = "Contact Us";
            
            return View();
        }
        
        // HTTP GET with parameter: Handles "/Home/User/John"
        // The "name" comes from the URL
        [HttpGet]
        public IActionResult UserProfile(string name)
        {
            ViewData["Title"] = "Profile: " + name;
            ViewData["UserName"] = name;
            
            return View();
        }
        
        // Simple action returning JSON (for APIs)
        [HttpGet]
        public IActionResult ApiExample()
        {
            var data = new {
                Status = "Success",
                Message = "This is JSON data",
                Timestamp = DateTime.Now
            };
            
            return Json(data);
        }
    }
}</code></pre>
            </div>
            
