    $(window).on('popstate', function() {
        const url = window.location.href;
        $.ajax({
            url: url,
            type: 'GET',
            success: function(data) {
                $('.container').html($(data).find('.container').html());
                if (typeof hljs !== 'undefined') {
                    hljs.highlightAll();
                }
            }
        });
    });
});
