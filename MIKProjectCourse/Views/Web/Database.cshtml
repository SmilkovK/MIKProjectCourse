<script>
$(document).ready(function() {
    // Initialize syntax highlighting
    if (typeof hljs !== 'undefined') {
        hljs.highlightAll();
    }

    // Copy code functionality
    $('.copy-btn').on('click', function() {
        const $codeElement = $(this).closest('.code-example').find('code');
        const codeText = $codeElement.text();
        
        navigator.clipboard.writeText(codeText).then(() => {
            const originalText = $(this).html();
            $(this).html('<i class="fas fa-check"></i> Copied!');
            $(this).removeClass('btn-outline-secondary').addClass('btn-success');
            
            setTimeout(() => {
                $(this).html(originalText);
                $(this).removeClass('btn-success').addClass('btn-outline-secondary');
            }, 2000);
        });
    });

    // Initialize drag and drop for matching game
    let draggedItem = null;
    
    $('.game-item').on('dragstart', function(e) {
        draggedItem = this;
        $(this).addClass('dragging');
    });
    
    $('.game-item').on('dragend', function() {
        $(this).removeClass('dragging');
        draggedItem = null;
    });
    
    $('.game-item').on('dragover', function(e) {
        e.preventDefault();
    });
    
    $('.game-item').on('drop', function(e) {
        e.preventDefault();
        
        if (draggedItem && draggedItem !== this) {
            // Swap positions
            const tempHTML = $(this).html();
            const tempData = $(this).data('match');
            
            $(this).html($(draggedItem).html());
            $(this).data('match', $(draggedItem).data('match'));
            
            $(draggedItem).html(tempHTML);
            $(draggedItem).data('match', tempData);
        }
    });

    // Check matching game answers
    $('#checkMatches').on('click', function() {
        const $feedback = $('.game-feedback');
        let correctMatches = 0;
        const totalMatches = 4;
        
        // Check each pair
        $('.game-column:first-child .game-item').each(function(index) {
            const leftMatch = $(this).data('match');
            const $rightItem = $('.game-column:last-child .game-item').eq(index);
            const rightMatch = $rightItem.data('match');
            
            if (leftMatch === rightMatch) {
                $(this).addClass('matched');
                $rightItem.addClass('matched');
                correctMatches++;
            } else {
                $(this).removeClass('matched');
                $rightItem.removeClass('matched');
            }
        });
        
        if (correctMatches === totalMatches) {
            $feedback.html(`
                <div style="display: flex; align-items: center; gap: 0.75rem;">
                    <i class="fas fa-check-circle" style="color: var(--bs-success); font-size: 1.5rem;"></i>
                    <div>
                        <strong>Perfect!</strong><br>
                        You correctly matched all database operations to their code examples!
                    </div>
                </div>
            `).removeClass('error').addClass('success').show();
        } else {
            $feedback.html(`
                <div style="display: flex; align-items: center; gap: 0.75rem;">
                    <i class="fas fa-exclamation-circle" style="color: var(--bs-warning); font-size: 1.5rem;"></i>
                    <div>
                        <strong>Almost there!</strong><br>
                        You got ${correctMatches} out of ${totalMatches} correct. 
                        Remember: SaveChanges() is needed for Create, Update, and Delete operations.
                    </div>
                </div>
            `).removeClass('success').addClass('error').show();
        }
    });

    // Make game items draggable
    $('.game-item').attr('draggable', 'true');

    // Add click interaction to method cards
    $('.method-card').on('click', function() {
        const $card = $(this);
        $card.toggleClass('active');
        
        if ($card.hasClass('active')) {
            $card.css('transform', 'translateY(-6px) scale(1.02)');
            $card.css('box-shadow', '0 12px 24px rgba(0,0,0,0.15)');
        } else {
            $card.css('transform', 'translateY(0) scale(1)');
            $card.css('box-shadow', 'none');
        }
    });

    const flowSteps = $('.flow-step');
    
    flowSteps.each(function(index) {
        $(this).css({
            'opacity': '0',
            'transform': 'translateY(20px)',
            'transition': 'all 0.5s ease ' + (index * 0.2) + 's'
        });
    });

    setTimeout(() => {
        flowSteps.each(function(index) {
            $(this).css({
                'opacity': '1',
                'transform': 'translateY(0)'
            });
        });
    }, 100);

    $('.method-example, .code-snippet').hover(
        function() {
            $(this).css('box-shadow', '0 0 0 2px rgba(var(--bs-primary-rgb), 0.3)');
        },
        function() {
            $(this).css('box-shadow', 'none');
        }
    );

    $(document).on('click', '.game-item', function() {
        if (typeof hljs !== 'undefined') {
            setTimeout(() => hljs.highlightAll(), 100);
        }
    });
});
