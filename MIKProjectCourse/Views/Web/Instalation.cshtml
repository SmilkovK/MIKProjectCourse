<script>
$(document).ready(function() {
    if (typeof hljs !== 'undefined') {
        hljs.highlightAll();
    }

    const progressSteps = document.querySelectorAll('.progress-step');
    let currentStep = 0;
    
    function animateProgress() {
        if (currentStep >= progressSteps.length) {
            currentStep = 0;
            progressSteps.forEach(step => {
                step.classList.remove('active');
            });
        }

        progressSteps.forEach((step, index) => {
            if (index <= currentStep) {
                step.classList.add('active');
            } else {
                step.classList.remove('active');
            }
        });
        
        currentStep++;
        setTimeout(animateProgress, 1500);
    }

    setTimeout(animateProgress, 1000);

    $('.workload-option').on('click', function() {
        $(this).toggleClass('selected');

        const selectedCount = $('.workload-option.selected').length;
        const sizeElement = $('.size-info strong');

        if (selectedCount <= 1) {
            sizeElement.text('Total Installation Size: ~3-5 GB');
        } else if (selectedCount <= 2) {
            sizeElement.text('Total Installation Size: ~5-7 GB');
        } else {
            sizeElement.text('Total Installation Size: ~8-10 GB');
        }
    });

    $('.download-option').hover(
        function() {
            $(this).css({
                'transform': 'translateY(-5px)',
                'box-shadow': '0 5px 15px rgba(92, 45, 145, 0.3)'
            });
        },
        function() {
            $(this).css({
                'transform': 'translateY(0)',
                'box-shadow': 'none'
            });
        }
    );

    $('.code-snippet').on('click', function() {
        const code = $(this).find('code').text();
        navigator.clipboard.writeText(code).then(() => {
            const originalText = $(this).html();
            $(this).html('<span style="color: #20c997;"><i class="fas fa-check"></i> Copied to clipboard!</span>');
            setTimeout(() => {
                $(this).html(originalText);
            }, 2000);
        });
    });
});
</script>