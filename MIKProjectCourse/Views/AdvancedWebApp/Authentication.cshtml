<script>
$(document).ready(function() {
    // Quiz functionality
    $('.quiz-option').click(function() {
        const $this = $(this);
        const isCorrect = $this.data('correct') === true;
        
        // Reset all options
        $('.quiz-option').removeClass('correct incorrect selected');
        
        // Mark this option as selected
        $this.addClass('selected');
        
        // Mark correct/incorrect
        $this.addClass(isCorrect ? 'correct' : 'incorrect');
        
        // Show feedback based on selection
        let feedbackText;
        if (isCorrect) {
            feedbackText = 'Correct! Selecting "Individual Accounts" gives you a complete, professional authentication system including user registration, secure login, password hashing, email confirmation, and password reset functionality. You do NOT need to code it from scratch - it is provided ready to use.';
        } else {
            feedbackText = 'Not quite. "Individual Accounts" provides much more than just basic forms or database tables. It gives you a complete, secure authentication system that includes security features, email integration, and professional-grade user management. You do not need to build it from scratch.';
        }
        
        $('#quiz-feedback-text').text(feedbackText);
        $('.quiz-feedback').addClass('show');
    });
    
    // Add AJAX navigation to buttons
    $('.navigation-buttons a').addClass('ajax-link');
});
</script>