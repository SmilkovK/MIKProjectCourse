            </div>

            <div id="solution4" class="solution-container">
                <div class="solution-header">Correct Solution:</div>
                <pre class="solution-code">public class BankAccount
{
    // Private field - hidden
    private decimal balance;
    
    // Public property
    public string Owner;
    
    // Public method to deposit
    public void Deposit(decimal amount)
    {
        if (amount > 0)
        {
            balance += amount;
            Console.WriteLine("Deposited: $" + amount);
        }
    }
    
    // Public method to get balance
    public decimal GetBalance()
    {
        return balance;
    }
}

// Using the encapsulated account
BankAccount account = new BankAccount();
account.Owner = "Alice";
account.Deposit(1000.00m);
Console.WriteLine(account.Owner + "'s balance: $" + account.GetBalance());</pre>
