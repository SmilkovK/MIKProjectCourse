            </div>

            <div id="solution8" class="solution-container">
                <div class="solution-header">Correct Solution:</div>
                <pre class="solution-code">public class Game
{
    public const int MAX_PLAYERS = 4;
    public static int playerCount = 0;
    public readonly string playerId;
    public string PlayerName;
    
    public Game(string name)
    {
        PlayerName = name;
        playerId = "P" + (playerCount + 1).ToString("D3");
        playerCount++;
    }
    
    public void DisplayInfo()
    {
        Console.WriteLine(PlayerName + " - ID: " + playerId);
        Console.WriteLine("Total players: " + playerCount + "/" + MAX_PLAYERS);
    }
}

// Using all modifiers
Game player1 = new Game("Alice");
Game player2 = new Game("Bob");

player1.DisplayInfo();
player2.DisplayInfo();</pre>
