                        <li> <a asp-controller="Frontend" asp-action="ItalicizeText">@Localizer["4.4 Italicize Text with Emphasis"]</a></li>
                        </ul>
                    <li> <a asp-controller="Frontend" asp-action="GettingtoKnowHTML">@Localizer["5. Building Structure"]</a></li>
