                        <li><a asp-controller="OOP" asp-action="StaticReadonlyConst">@Localizer["Static / Readonly / Const"]</a></li>
                        <li><a asp-controller="OOP" asp-action="Summary">@Localizer["Chapter Summary"]</a></li>
                    </ul>
                </li>
                <li>
                    <div class="chapter-title" data-id="4">@Localizer["Databases"]</div>
                    <ul class="subchapter-list">
                        <li><a asp-controller="Database" asp-action="Index">@Localizer["What is a Database?"]</a></li>
                        <li><a asp-controller="Database" asp-action="WhyDatabase">@Localizer["Why Use a Database?"]</a></li>
                        <li><a asp-controller="Database" asp-action="TypesOfDatabase">@Localizer["Types of Databases"]</a></li>
                        <li><a asp-controller="Database" asp-action="HowDatabaseWorks">@Localizer["How Databases Work"]</a></li>
                        <li><a asp-controller="Database" asp-action="RelationalDatabase">@Localizer["Relational Databases"]</a></li>
                        <li><a asp-controller="Database" asp-action="Example">@Localizer["Example"]</a></li>
                        <li><a asp-controller="Database" asp-action="Summary">@Localizer["Chapter Summary"]</a></li>
                    </ul>
                </li>
                <li>
                    <div class="chapter-title" data-id="5">@Localizer["Database Relationships"]</div>
                    <ul class="subchapter-list">
                        <li><a asp-controller="DataBaseRelations" asp-action="Index">@Localizer["Introduction to Database Relations"]</a></li>
                        <li><a asp-controller="DataBaseRelations" asp-action="OneToOne">@Localizer["One-to-One"]</a></li>
