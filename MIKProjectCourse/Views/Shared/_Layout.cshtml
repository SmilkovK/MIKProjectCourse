        <main id="page-content" role="main">
            @RenderBody()
        </main>
    </div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/highlight.min.js"></script>
<script>
$(document).ready(function() {
    const themeSelect = $('#themeSelect')[0];
    const htmlEl = document.documentElement;
    const hljsTheme = $('#hljs-theme')[0];
    const savedTheme = localStorage.getItem('theme') || 'dark';

    htmlEl.setAttribute('data-bs-theme', savedTheme);
    themeSelect.value = savedTheme;

    function updateCodeTheme(theme) {
        hljsTheme.href = theme === 'dark'
            ? 'https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/github-dark.min.css'
            : 'https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/github.min.css';
        hljs.highlightAll();
    }
    updateCodeTheme(savedTheme);

    themeSelect.addEventListener('change', function() {
        const selected = this.value;
        htmlEl.setAttribute('data-bs-theme', selected);
        localStorage.setItem('theme', selected);
        updateCodeTheme(selected);
    });

    let expandedChapter = localStorage.getItem('expandedChapter') || null;

    function updateExpandedChapters() {
        $('.chapter-title').each(function() {
            const id = $(this).data('id');
            if (id == expandedChapter) {
                $(this).addClass('active');
                $(this).siblings('.subchapter-list').show();
            } else {
                $(this).removeClass('active');
                $(this).siblings('.subchapter-list').hide();
            }
        });
    }
    updateExpandedChapters();

    $('.chapter-title').click(function() {
        const id = $(this).data('id');
        if (expandedChapter == id) {
            expandedChapter = null;
        } else {
            expandedChapter = id;
        }
        localStorage.setItem('expandedChapter', expandedChapter);
        updateExpandedChapters();
    });

    function highlightCurrentPage() {
        const currentPath = window.location.pathname;
        $('.chapter-list a').removeClass('current-page');
        $('.chapter-list a').each(function() {
            if (this.pathname === currentPath) {
                $(this).addClass('current-page');
                const parentChapterId = $(this).closest('.subchapter-list').prev('.chapter-title').data('id');
                expandedChapter = parentChapterId;
                localStorage.setItem('expandedChapter', expandedChapter);
                updateExpandedChapters();
            }
        });
    }
    highlightCurrentPage();

    function loadPage(url, addToHistory = true) {
        $(window).scrollTop(0);

        $.get(url, function(data) {
            const html = $(data).find('#page-content').html();

            $('#page-content').stop(true, true).fadeOut(50, function() {
                $(this).html(html).fadeIn(50, function() {
                    hljs.highlightAll();
                    highlightCurrentPage();
                    updateExpandedChapters();
                });
            });
        }).done(function() {
            if (addToHistory) window.history.pushState({ url: url }, '', url);
        });
    }

    $(document).on('click', '.ajax-link, .chapter-list a', function(e) {
        e.preventDefault();
        const url = $(this).attr('href');
        if (url) loadPage(url);
    });

    window.onpopstate = function(e) {
        if (e.state && e.state.url) loadPage(e.state.url, false);
    };

    hljs.highlightAll();
});
</script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
