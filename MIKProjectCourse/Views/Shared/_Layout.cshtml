                    <ul class="subchapter-list">
                        <li><a asp-controller="Frontend" asp-action="WhatIsFrontend">@Localizer["What Is Frontend"]</a></li>
                       <li> <a asp-controller="Frontend" asp-action="WhyFrontend">@Localizer["Why Frontend"]</a></li>
                        <li> <a asp-controller="Frontend" asp-action="WebWorks">@Localizer["How the web works"]</a></li>
                        <li> <a asp-controller="Frontend" asp-action="CreateWebPage">@Localizer["How to create a web page"]</a></li>
                        <li> <a asp-controller="Frontend" asp-action="FrontendTechnologies">@Localizer["Types of Frontend Technologies"]</a></li>
                    </ul>
                </li>

                  <div class="chapter-title">@Localizer["HTML - Type of Frontend"]</div>
                    <ul class="subchapter-list">
                            
                           <li> <a asp-controller="Frontend" asp-action="GettingtoKnowHTML">@Localizer["1. Getting to Know HTML"]</a></li>
                            <li> <a asp-controller="Frontend" asp-action="SemanticsOverview">@Localizer["2.Semantics Overview"]</a></li>
                     <div class="chapter-title">@Localizer["3.Identifying Divisions & Spans"]</div>
                            <ul class="subchapter-list">

                                <li> <a asp-controller="Frontend" asp-action="IdentifyingDivisionsSpans">@Localizer["3.0 Identifying Divisions & Spans"]</a></li>
                                <li> <a asp-controller="Frontend" asp-action="BlockInlineElements">@Localizer["3.1 Block vs. Inline Elements"]</a></li>
                                <li> <a asp-controller="Frontend" asp-action="CommentsWithinHTMLCSS">@Localizer["3.3 Comments within HTML & CSS"]</a></li>
                            </ul>
                 

                            <div class="chapter-title">@Localizer["4 Using Text-Based Elements"]</div>
                            <ul class="subchapter-list">

                        <li> <a asp-controller="Frontend" asp-action="textBasedElements">@Localizer["4.0 Using Text-Based Elements"]</a></li>
                        <li> <a asp-controller="Frontend" asp-action="Headings">@Localizer["4.1 Headings"]</a></li>
                        <li> <a asp-controller="Frontend" asp-action="Paragraphs">@Localizer["4.2 Paragraphs"]</a></li>
