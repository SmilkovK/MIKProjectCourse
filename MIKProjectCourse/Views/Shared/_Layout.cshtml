                        <li><a asp-controller="DataBaseRelations" asp-action="ManyToMany">@Localizer["ManyToMany"]</a></li>
                        <li><a asp-controller="DataBaseRelations" asp-action="ManyToManyWithJoin">@Localizer["ManyToManyWithJoin"]</a></li>
                    </ul>
                </li>
