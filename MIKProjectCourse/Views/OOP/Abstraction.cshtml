public abstract class Vehicle
{
    public abstract void StartEngine(); // no body here
}

public class Car : Vehicle
{
    public override void StartEngine()
    {
        Console.WriteLine("Car engine started!");
    }
}

// Usage
Vehicle v = new Car();
v.StartEngine(); // Output: Car engine started!
</code></pre>

<pre><code class="language-c abstraction-code" style="display:none;">
#include &lt;stdio.h&gt;

// In C we don't have "abstract classes".
// We use function pointers to mimic abstraction.

struct Vehicle {
    void (*StartEngine)();
};

void CarEngine() {
    printf("Car engine started!\n");
}

int main() {
    struct Vehicle car;
    car.StartEngine = CarEngine;
    car.StartEngine(); // Output: Car engine started!
    return 0;
}
</code></pre>
