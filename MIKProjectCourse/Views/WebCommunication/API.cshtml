        background-color: rgba(13, 110, 253, 0.1);
        border: 2px solid var(--bs-primary);
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 30px;
        display: flex;
        gap: 15px;
        align-items: flex-start;
    }
    
    .beginner-note-icon {
        background-color: var(--bs-primary);
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        flex-shrink: 0;
    }
    
    .intro-section {
        margin-bottom: 30px;
        padding: 20px;
        background-color: rgba(108, 117, 125, 0.1);
        border-radius: 8px;
    }
    
    /* API Flow */
    .api-flow {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
        margin: 40px 0;
        position: relative;
    }
    
    .flow-component {
        padding: 25px;
        text-align: center;
        border-radius: 12px;
        min-width: 180px;
        background-color: rgba(255, 255, 255, 0.05);
        border: 3px solid;
        flex: 1;
    }
    
    .flow-component:not(.api-middle) {
        border-color: var(--bs-primary);
    }
    
