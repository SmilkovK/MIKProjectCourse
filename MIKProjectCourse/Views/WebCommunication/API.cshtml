<script>
$(document).ready(function() {
    if (typeof hljs !== 'undefined') {
        hljs.highlightAll();
    }

    $(document).on('click', '.option-btn', function(e) {
        e.preventDefault();
        
        var $button = $(this);
        var isCorrect = $button.data('correct') === true;
        var $scenario = $button.closest('.scenario');

        $scenario.find('.option-btn').removeClass('correct incorrect');

        if (isCorrect) {
            $button.addClass('correct');
        } else {
            $button.addClass('incorrect');
        }

        $scenario.find('.option-btn').each(function() {
            var $btn = $(this);
            if (!$btn.is($button)) {
                var btnIsCorrect = $btn.data('correct') === true;
                if (btnIsCorrect) {
                    $btn.addClass('correct');
                } else {
                    $btn.addClass('incorrect');
                }
            }
        });
    });

    function animateFlowArrows() {
        $('.flow-arrow:not(.return)').each(function(index) {
            var $arrow = $(this);
            setTimeout(function() {
                $arrow.css({
                    'transform': 'scale(1.2)',
                    'color': '#ffc107'
                });
                setTimeout(function() {
                    $arrow.css({
                        'transform': 'scale(1)',
                        'color': ''
                    });
                }, 300);
            }, index * 1000);
        });

        setTimeout(function() {
            $('.flow-arrow.return').css({
                'transform': 'translateX(-50%) scale(1.2)',
                'color': '#28a745'
            });
            setTimeout(function() {
                $('.flow-arrow.return').css({
                    'transform': 'translateX(-50%) scale(1)',
                    'color': ''
                });
            }, 300);
        }, 4000);
    }

    setTimeout(animateFlowArrows, 1000);

    setInterval(animateFlowArrows, 10000);

    $('.api-example').hover(
        function() {
            $(this).css('box-shadow', '0 10px 20px rgba(0,0,0,0.2)');
        },
        function() {
            $(this).css('box-shadow', 'none');
        }
    );
});
</script>
