        font-size: 40px;
        margin-bottom: 15px;
    }
    
    .flow-component:not(.api-middle) .component-icon {
        color: var(--bs-primary);
    }
    
    .api-middle .component-icon {
        color: var(--bs-success);
    }
    
    .component-label {
        font-weight: bold;
        font-size: 1.1rem;
        margin-bottom: 5px;
    }
    
    .flow-arrow {
        color: var(--bs-primary);
        font-size: 30px;
    }
    
    .flow-arrow.return {
        position: absolute;
        bottom: -60px;
        left: 50%;
        transform: translateX(-50%);
        color: var(--bs-success);
    }
    
    /* Real World Examples */
    .real-world-examples {
        margin: 60px 0 40px 0;
    }
    
    .real-world-examples h3 {
        color: var(--bs-warning);
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
