        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
        margin-top: 25px;
    }
    
    .api-example {
        padding: 25px;
        background-color: rgba(255, 193, 7, 0.1);
        border: 1px solid var(--bs-warning);
        border-radius: 10px;
        transition: transform 0.3s;
    }
    
    .api-example:hover {
        transform: translateY(-5px);
    }
    
    .example-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
    }
    
    .example-logo {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: var(--bs-warning);
        color: #212529;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        flex-shrink: 0;
    }
    
    .example-header h4 {
        margin: 0;
        color: var(--bs-warning);
    }
    
    .api-request, .api-response {
        margin: 15px 0;
        padding: 12px;
        background-color: rgba(0, 0, 0, 0.1);
        border-radius: 6px;
        border-left: 3px solid;
    }
    
    .api-request {
        border-left-color: #007bff;
    }
    
    .api-response {
        border-left-color: #28a745;
    }
    
    .request-label, .response-label {
        display: block;
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 5px;
    }
    
    /* API Types */
    .api-types {
        margin: 40px 0;
    }
    
    .api-types h3 {
        color: var(--bs-info);
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .types-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 25px;
        margin-top: 20px;
    }
    
    .api-type {
        padding: 25px;
        text-align: center;
        border-radius: 10px;
        background-color: rgba(23, 162, 184, 0.1);
        border: 1px solid var(--bs-info);
    }
    
    .type-icon {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        color: white;
    }
    
    .web { background: linear-gradient(135deg, #17a2b8, #138496); }
    .library { background: linear-gradient(135deg, #6f42c1, #5a32a3); }
    .os { background: linear-gradient(135deg, #e83e8c, #d91a72); }
    
    .api-type h4 {
        color: var(--bs-info);
        margin-top: 0;
    }
    
    .type-example {
