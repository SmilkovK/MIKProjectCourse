<script>
$(document).ready(function() {
    // Highlight code blocks
    if (typeof hljs !== 'undefined') {
        hljs.highlightAll();
    }

    // Timer functionality
    let timerInterval;
    let seconds = 0;
    let isRunning = false;
    
    function updateTimer() {
        const minutes = Math.floor(seconds / 60);
        const remainingSeconds = seconds % 60;
        const formattedTime = 
            String(minutes).padStart(2, '0') + ':' + 
            String(remainingSeconds).padStart(2, '0');
        $('#clientTimer').text(formattedTime);
    }
    
    $('#startTimer').click(function() {
        if (!isRunning) {
            isRunning = true;
            timerInterval = setInterval(() => {
                seconds++;
                updateTimer();
            }, 1000);
        }
    });
    
    $('#pauseTimer').click(function() {
        if (isRunning) {
            isRunning = false;
            clearInterval(timerInterval);
        }
    });
    
    $('#resetTimer').click(function() {
        isRunning = false;
        clearInterval(timerInterval);
        seconds = 0;
        updateTimer();
    });
    
    // Initialize timer
    updateTimer();

    // Quiz functionality
    $(document).on('click', '.quiz-btn', function() {
        var $button = $(this);
        var $quizItem = $button.closest('.quiz-item');
        var isCorrect = $button.data('correct') === true;
        
        // Clear all buttons in this quiz item
        $quizItem.find('.quiz-btn').removeClass('correct incorrect');
        $quizItem.find('.quiz-feedback').removeClass('correct incorrect').hide();
        
        // Mark clicked button
        if (isCorrect) {
            $button.addClass('correct');
            $quizItem.find('.quiz-feedback')
                .addClass('correct')
                .html('<i class="fas fa-check"></i> <strong>Correct!</strong> This happens client-side.')
                .show();
        } else {
            $button.addClass('incorrect');
            $quizItem.find('.quiz-feedback')
                .addClass('incorrect')
                .html('<i class="fas fa-times"></i> <strong>Not quite!</strong> This actually happens server-side.')
                .show();
        }

        $quizItem.find('.quiz-btn').each(function() {
            var $btn = $(this);
            if ($btn.data('correct') === true && !$btn.is($button)) {
                $btn.addClass('correct');
            }
        });
    });
});
</script>
