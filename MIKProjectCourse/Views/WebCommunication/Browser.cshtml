        justify-content: center;
        font-size: 24px;
        font-weight: bold;
        flex-shrink: 0;
    }

    .process-content h5 {
        color: var(--bs-warning);
        margin-top: 0;
    }

    .address-bar-example {
        margin-top: 10px;
    }

    .address-bar {
        display: inline-flex;
        align-items: center;
        padding: 8px 15px;
        background-color: #f8f9fa;
        border: 2px solid #dee2e6;
        border-radius: 25px;
        gap: 10px;
