    .safari { background: linear-gradient(135deg, #1B73E8, #34a853); }
    .firefox { background: linear-gradient(135deg, #E66000, #FF9500); }
    .edge { background: linear-gradient(135deg, #0078D7, #1490DF); }

    .browser-card h4 {
        margin: 10px 0;
        color: var(--bs-heading-color);
    }

    .process-step {
        display: flex;
        gap: 20px;
        margin: 25px 0;
        padding: 20px;
        background-color: rgba(255, 193, 7, 0.1);
        border: 2px solid var(--bs-warning);
        border-radius: 12px;
        align-items: center;
    }

    .process-number {
        background-color: var(--bs-warning);
        color: #212529;
        width: 50px;
