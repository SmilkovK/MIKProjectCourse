</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const checkboxes = document.querySelectorAll('.checklist-item input');
    checkboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            const label = this.nextElementSibling;
            if (this.checked) {
                label.style.textDecoration = 'line-through';
                label.style.opacity = '0.7';
            } else {
                label.style.textDecoration = 'none';
                label.style.opacity = '1';
            }
        });
    });

    const codeTabs = document.querySelectorAll('.code-tab');
    const codeContent = document.querySelector('.code-content');
    
    codeTabs.forEach(tab => {
            codeTabs.forEach(t => t.classList.remove('active'));
            this.classList.add('active');

            const tabText = this.textContent.trim();
            
            if (tabText === 'HTML') {
                codeContent.innerHTML = `&lt;div class="video"&gt;🎬&lt;/div&gt;<br>
&lt;button class="play"&gt;▶ Play&lt;/button&gt;<br>
&lt;h1&gt;Video Title&lt;/h1&gt;<br>
&lt;p&gt;Description goes here&lt;/p&gt;`;
            } else if (tabText === 'CSS') {
                codeContent.innerHTML = `.video {<br>
&nbsp;&nbsp;width: 300px;<br>
&nbsp;&nbsp;height: 200px;<br>
&nbsp;&nbsp;background: black;<br>
}<br><br>
.play-button {<br>
&nbsp;&nbsp;background: red;<br>
&nbsp;&nbsp;color: white;<br>
&nbsp;&nbsp;padding: 10px;<br>
}`;
            } else if (tabText === 'JavaScript') {
                codeContent.innerHTML = `function playVideo() {<br>
&nbsp;&nbsp;console.log("Playing video...");<br>
&nbsp;&nbsp;// Code to start video<br>
}<br><br>
document.querySelector('.play')<br>
&nbsp;&nbsp;.addEventListener('click', playVideo);`;
            }
        });
    });

    const navButtons = document.querySelectorAll('.nav-button');
    navButtons.forEach(button => {
        button.addEventListener('click', function() {
            const icon = this.querySelector('i');
            if (!icon) return;
            
            const iconClass = icon.className;

            if (iconClass.includes('arrow-left') || iconClass.includes('arrow-right')) {
                const content = document.querySelector('.content-area h4');
                if (content) {
                    content.style.transform = 'translateX(10px)';
                    setTimeout(() => {
                        content.style.transform = 'translateX(0)';
                    }, 300);
                }
            } else if (iconClass.includes('redo')) {
                const content = document.querySelector('.content-area');
                if (content) {
                    content.style.opacity = '0.5';
                    setTimeout(() => {
                        content.style.opacity = '1';
                    }, 500);
                }
            } else if (iconClass.includes('star')) {
                const originalColor = this.style.color;
                this.style.color = '#ffc107';
                setTimeout(() => {
                    this.style.color = originalColor;
                }, 1000);
            }
        });
    });

    const playButton = document.querySelector('.play-button');
    if (playButton) {
        playButton.addEventListener('click', function() {
            const originalText = this.innerHTML;
            const originalColor = this.style.backgroundColor;
            
            this.innerHTML = '<i class="fas fa-pause"></i> Playing...';
            this.style.backgroundColor = '#28a745';
            
            setTimeout(() => {
                this.innerHTML = originalText;
                this.style.backgroundColor = originalColor || '#ff0000';
            }, 2000);
        });
    }
});
</script>
