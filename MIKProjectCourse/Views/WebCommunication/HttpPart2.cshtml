<script>
$(document).ready(function() {
    if (typeof hljs !== 'undefined') {
        hljs.highlightAll();
    }

    // Animate frequency bars
    const frequencyItems = document.querySelectorAll('.frequency-item');
    frequencyItems.forEach((item, index) => {
        const bar = item.querySelector('.frequency-bar');
        const statusCode = item.querySelector('.status-code-mini');
        
        if (statusCode.classList.contains('success')) {
            bar.style.setProperty('--bar-color', '#28a745');
        } else if (statusCode.classList.contains('redirect')) {
            bar.style.setProperty('--bar-color', '#ffc107');
        } else if (statusCode.classList.contains('client-error')) {
            bar.style.setProperty('--bar-color', '#dc3545');
        } else if (statusCode.classList.contains('server-error')) {
            bar.style.setProperty('--bar-color', '#6f42c1');
        }

        bar.style.width = '0%';
        setTimeout(() => {
            const targetWidth = bar.getAttribute('style').split('width: ')[1];
            bar.style.width = targetWidth;
        }, 500 + (index * 200));
    });

    // Initialize the game functionality
    function initializeGame() {
        $('.game-btn').off('click').on('click', function() {
            const $button = $(this);
            const $scenario = $button.closest('.game-scenario');
            const correctAnswer = $scenario.data('correct');
            const selectedAnswer = $button.data('answer');
            
            console.log('Game clicked:', {
                correctAnswer: correctAnswer,
                selectedAnswer: selectedAnswer
            });
            
            // Reset all buttons in this scenario
            $scenario.find('.game-btn')
                .removeClass('correct incorrect')
                .css({
                    'color': 'white',
                    'background-color': '',
                    'border-color': ''
                });
            
            $scenario.find('.game-feedback')
                .removeClass('correct incorrect')
                .hide();
            
            // Check if answer is correct
            if (selectedAnswer === correctAnswer) {
                $button.addClass('correct');
                $button.css({
                    'background-color': '#28a745',
                    'border-color': '#28a745',
                    'color': 'white'
                });
                
                $scenario.find('.game-feedback')
                    .addClass('correct')
                    .html('<i class="fas fa-check"></i> <strong>Correct!</strong> That\'s the right status code!')
                    .show();
            } else {
                $button.addClass('incorrect');
                $button.css({
                    'background-color': '#dc3545',
                    'border-color': '#dc3545',
                    'color': 'white'
                });
                
                $scenario.find('.game-feedback')
                    .addClass('incorrect')
                    .html(`<i class="fas fa-times"></i> <strong>Not quite!</strong> The correct answer is ${correctAnswer}.`)
                    .show();
            }

            $scenario.find('.game-btn').each(function() {
                const $btn = $(this);
                if ($btn.data('answer') === correctAnswer) {
                    $btn.addClass('correct');
                    $btn.css({
                        'background-color': '#28a745',
                        'border-color': '#28a745',
                        'color': 'white'
                    });
                }
            });
        });
    }

    initializeGame();
});
</script>