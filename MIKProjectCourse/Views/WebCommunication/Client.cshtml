</style>

<script>
$(document).ready(function() {
    if (typeof hljs !== 'undefined') {
        hljs.highlightAll();
    }

    // Use jQuery for easier event delegation
    $(document).on('click', '.option-btn', function() {
        const $button = $(this);
        const isCorrect = $button.data('correct') === true;
        const $scenario = $button.closest('.scenario');
        
        // Remove all classes first
        $scenario.find('.option-btn').removeClass('correct incorrect');
        
        // Mark clicked button
        $button.addClass(isCorrect ? 'correct' : 'incorrect');
        
        // Mark other buttons
        $scenario.find('.option-btn').each(function() {
            const $btn = $(this);
            if ($btn[0] !== $button[0]) {
                const btnIsCorrect = $btn.data('correct') === true;
                $btn.addClass(btnIsCorrect ? 'correct' : 'incorrect');
            }
        });
    });
});
</script>
