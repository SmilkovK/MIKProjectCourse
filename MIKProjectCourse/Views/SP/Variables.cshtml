<script>
    function convertCode() {
        const isChecked = document.getElementById("languageToggle").checked;
        const codeBlock = document.getElementById("codeBlock");

        const cppCode = `// Initializing variables (Declaration + Assignment)
int age = 13;
float height = 1.55;
char grade = 'A';
string name = "Alex";
bool hasLicense = false;

int yearBorn = 2025 - age;

// print("Alex was born in: " + yearBorn);`;

        const csharpCode = `// Initializing variables (Declaration + Assignment)
int age = 13;
float height = 1.55f; // C# float requires 'f'
char grade = 'A';
string name = "Alex";
bool hasLicense = false;

int yearBorn = 2025 - age;

// Console.WriteLine("Alex was born in: " + yearBorn);`;

        codeBlock.textContent = isChecked ? csharpCode : cppCode;
    }

    document.addEventListener('DOMContentLoaded', () => {
        convertCode();
    });
</script>
